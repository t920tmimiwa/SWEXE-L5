<% if @user.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @user, url: {action: :create} do |f| %>
  <%= f.label :uid, 'ユーザーID' %> 
  <%= f.text_field :uid %><br>
  <%= f.label :pass, 'パスワード' %> 
  <%= f.password_field :pass %><br>
  <%= f.submit '登録' %>
<% end %>

<% if session[:login_uid] %>
    ログイン中
<% else %>
    ログインしていません
<% end %>